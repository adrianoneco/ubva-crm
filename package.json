{
  "name": "ubva-crm",
  "version": "1.0.0",
  "description": "CRM application with React, Vite, TypeScript, TailwindCSS, Drizzle ORM, Express, and Socket.io",
  "type": "module",
  "scripts": {
    "dev": "bun run kill-port && dotenv -e .env -- concurrently --names \"CLIENT,SERVER\" \"bun run client\" \"bun run server:watch\"",
    "build": "tsc && vite build",
    "kill-port": "npx kill-port 5173 8000",
    "preview": "vite preview",
    "client": "vite --host --port 8000",
    "server": "tsx server/index.ts",
    "server:watch": "tsx watch server/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "crm",
    "react",
    "vite",
    "typescript",
    "tailwindcss",
    "drizzle",
    "express",
    "socket.io"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@types/react-router-dom": "^5.3.3",
    "argon2": "^0.44.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "multer": "^2.0.2",
    "papaparse": "^5.5.3",
    "pg": "^8.16.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.10.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.2",
    "@types/papaparse": "^5.5.2",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/xlsx": "^0.0.36",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "kill-port": "^2.0.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}
